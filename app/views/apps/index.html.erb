<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Deploy support tools</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <div class="container">
      <h1>Staging Apps</h1>
      <% if @apps.present? %>
        <% @apps.each do |app| %>
          <h3>
            <a name="<%= app %>" href="#<%= app %>" class="h4">
              <span class="glyphicon glyphicon-paperclip"></span>
            </a>
            <%= app %>
          </h1>
          <% servers = Rails.cache.read("app-#{app}") %>
          <% if servers.present? %>
            <table class="table table-striped table-hover">
              <tr>
                <th>#</th>
                <th>URL</th>
                <th>branch_name</th>
                <th>last_use</th>
              </tr>
              <% servers.each.with_index do |server, index| %>
                <% staging_url = staging_url_for_app(app, index + 1) %>
                <tr>
                  <td><%= index + 1 %>.</td>
                  <td><%= link_to_if staging_url.match(/\Ahttps?:\/\//), staging_url, staging_url, {target: "_blank"} %></td>
                  <td><%= server['branch_name'] %></td>
                  <td><time datetime="<%= server['last_use'] %>"><%= time_ago_in_words(Time.parse(server['last_use'])) + " ago" %></time></td>
                </tr>
              <% end %>
            </table>
          <% end %>
        <% end %>
        <div class="blank"></div>
      <% end %>
    </div>
  </body>
</html>
